<div class="span-12">
<h3>People feel most <span class="emotion"><%=h @emotion.name %></span> because of</h3> 
<ul class="scoreboard">
  <% @emotion.trends.first(10).each do |trend| -%>
    <li>
      <span class="score"><%= Pivot.new(:emotion => @emotion, :trend => trend).formatted_score %></span>
      <span class="trend"><%= link_to trend.name, trend %></span>
    </li>
  <% end -%>
</ul>
</div>

<div class="span-12 last">
  <div id="sidebar">
  <ul>
    <li>
      <span class="score"><%= @emotion.score.round %>%</span> of everyone's tweets display <span class="emotion"><%= h @emotion.name %></span>.
      </li>
    </ul>
  </div>
</div>

