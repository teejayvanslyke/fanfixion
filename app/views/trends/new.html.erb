    $(function() { 
    var button = $("input[type='submit']");
    var textField = $("input[type='text']");
    button.attr('disabled', true); 
    textField.click(function() { 
    $(this).val(''); 
    button.removeAttr('disabled'); 
    $(this).unbind('click'); }) 
    button.click(function() {
      if (textField.val() == '') return false;
      return true;
    });
    });
  <% end -%>
<% end -%>

