<h1>New status</h1>

<% form_for(@status) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :twitter_id %><br />
    <%= f.text_field :twitter_id %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </p>
  <p>
    <%= f.label :favorited %><br />
    <%= f.check_box :favorited %>
  </p>
  <p>
    <%= f.label :truncated %><br />
    <%= f.check_box :truncated %>
  </p>
  <p>
    <%= f.label :twitter_user_id %><br />
    <%= f.text_field :twitter_user_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', statuses_path %>